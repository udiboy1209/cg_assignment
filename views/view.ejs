<html lang="en">
    <head>
        <% include parts/head %>
    </head>
    <body class="container">

    <header>
    <% include parts/header %>
    </header>

        <div class="container">
            <h3><%= title %></h3>
            <hr>
            <% if(err) { %>
               <span class="alert alert-danger"> <%= err.toString() %> </span>
            <% } else {%>
                <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <% fields.forEach(function(field){ %>
                            <th> <%= field.name %> </th>
                        <% }); %>
                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach(function(row){ %>
                        <tr>
                            <% fields.forEach(function(field){ %>
                                <td> <%= row[field.name] %> </td>
                            <% }); %>
                        </tr>
                    <% }); %>
                </tbody>
                </table>
            <% } %>
        </div>

    <footer>
    <% include parts/footer %>
    </footer>

    </body>
</html>

