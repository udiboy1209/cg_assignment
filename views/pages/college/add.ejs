<html lang="en">
    <head>
        <% include ../../parts/head %>

        <script type='text/javascript'>
            function loadCityOptions(ret){
                if(ret.error)
                    document.alert(ret.message);
                else
                    $.each(ret.data, function(i, val){
                        $('#city').append($('<option/>',{ value: val.id, text: val.name }));
                    });
            }
        </script>
    </head>
    <body class="container">

    <header>
    <% include ../../parts/header %>
    </header>

        <div class="container">
            <h3>Add new college</h3>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <% if(notif){if(err) { %>
                    <div class="alert alert-danger">
                        <%= err.toString() %>
                    </div>
                    <% } else { %>
                    <div class="alert alert-success">
                        Successfully Added!
                    </div>
                    <% }} %>
                </div>
                <div class="col-lg-4 col-lg-offset-4">

                    <form role="form" method="post" action=" ">
                        <div class="form-group">
                            <label for='city'>Select city:</label>
                            <select class='form-control' id='city' name='city'>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="user">College Name:</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="/api/city?callback=loadCityOptions"></script>

    <footer>
    <% include ../../parts/footer %>
    </footer>

    </body>
</html>


