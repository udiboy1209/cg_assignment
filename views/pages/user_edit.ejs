<html lang="en">
    <head>
        <% include ../parts/head %>
    </head>
    <body class="container">

    <header>
    <% include ../parts/header %>
    </header>

        <div class="container">
            <h3>Find and edit Users</h3>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <% if(notif){if(err) { %>
                    <div class="alert alert-danger">
                        <%= err.toString() %>
                    </div>
                    <% } else { %>
                    <div class="alert alert-success">
                        Successfully Changed!
                    </div>
                    <% }} %>
                </div>
                <div class="col-lg-4 col-lg-offset-4">
                    <form role="form" action=' ' method='get'>
                        <div class="form-group">
                            <label for='mi_no'>MI No:</label>
                            <input type='text' class='form-control' id='mi_no' name='mi_no'>
                        </div>
                        <button type='submit' class='btn btn-default'>Find</button>
                    </form>
                </div>
                <% if(user) { %>
                <div class="col-lg-6 col-lg-offset-3">
                    <form role="form" method='post' action='/user/edit'>
                        <% fields.forEach(function(fn){ %>
                            <div class='form-group'>
                                <label><%= fn.name %>:</label>
                                <input type='text' class='form-control' name='<%= fn.name %>'
                                value='<%= user[fn.name] %>' 
                                <% if(disabled.indexOf(fn.name)>-1) { %>
                                    readonly
                                <%  }  %>
                                >
                            </div>
                        <% }); %>
                        <button type='submit' class='btn btn-default'>Update</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>

    <footer>
    <% include ../parts/footer %>
    </footer>

    </body>
</html>

