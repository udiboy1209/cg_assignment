<html lang="en">
    <head>
        <% include ../../parts/head %>

        <script type='text/javascript'>
            function loadCLOptions(ret){
                $('#cl').empty();
                if(ret.error)
                    document.alert(ret.message);
                else
                    $.each(ret.data, function(i, val){
                        $('#cl').append($('<option>',
                                { value: val.mi_no, 
                                text: val.college_name+' : '+val.mi_no+' : '+val.name }));
                    });
            }
        </script>
    </head>
    <body class="container">

    <header>
    <% include ../../parts/header %>
    </header>

        <div class="container">
            <h3>Set CL Password</h3>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <% if(notif){if(err) { %>
                    <div class="alert alert-danger">
                        <%= err.toString() %>
                    </div>
                    <% } else { %>
                    <div class="alert alert-success">
                        Successfully Set Password!
                    </div>
                    <% }} %>
                </div>
                <div class="col-lg-4 col-lg-offset-4">

                    <form role="form" method="post" action=" ">
                        <div class="form-group">
                            <label for='cl'>Select CL:</label>
                            <select class='form-control' id='cl' name='cl'>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for='pass'>Set password:</label>
                            <input type='text' class='form-control' id='pass' name='pass'>
                        </div>
                        <button type="submit" class="btn btn-default">Update</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="/api/cl?callback=loadCLOptions"></script>

    <footer>
    <% include ../../parts/footer %>
    </footer>

    </body>
</html>


